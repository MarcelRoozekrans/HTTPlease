{
	"version": "0.1.0",
	"linux": { "command": "bash", "args": ["-c"] },
	"osx": { "command": "bash", "args": ["-c"] },
	"windows": { "command": "powershell", "args": ["-Command"] },
	"isShellCommand": true,
	"suppressTaskName": true,
	"args": [],
	"tasks": [
		{
			"taskName": "build",
			"args": [ "dnu build ./src/HTTPlease.* ./test/HTTPlease.*.Tests --quiet" ],
			"isBuildCommand": true,
			"showOutput": "always",
			"problemMatcher": "$msCompile"
		},
		{
			"taskName": "restore",
			"args": [ "dnu restore ./src/HTTPlease.* ./test/HTTPlease.*.Tests --quiet" ],
			"showOutput": "always"
		},
		{
			"taskName": "test-core",
			"args": [ "dnx -p ./test/HTTPlease.Core.Tests test" ],
			"showOutput": "always"
		},
		{
			"taskName": "test-formatters",
			"args": [ "dnx -p ./test/HTTPlease.Formatters.Tests test" ],
			"showOutput": "always"
		}
	]
}